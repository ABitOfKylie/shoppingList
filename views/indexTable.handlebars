<div class = "container">
	<div class = "col-md-12">
		<h1>Shopping List</h1>
		<div class="jumbotron">   		
    		<div class="row">
    			<div class="col-md-12">
		    		<form class="form-inline" action="/shop_items/create" method="POST">
			    		<div class="form-group">
			    		
			    			<input type="text" id="newItem" name="item"/> 
			    			<button type="submit" class="btn btn-xs">Add Item!</button>
			    		</div>
		    		</form>
    			</div>
    		</div>
		</div>
	</div>
</div>
<!-- ************** -->
<div class="container">
	<div class = "row">
	<div class = "col-md-6">
		<div class="panel panel-default text-center">
  		<!-- Default panel contents -->
  		<div class="panel-heading">Items to Buy <i class="fa fa-shopping-cart" aria-hidden="true"></i>
  		</div>
	<!-- Items to Buy Table -->
		<table class="table">
          <thead class = "thead-inverse">
            <tr>
	          <th class="col-md-9">Item</th>
              <th class="col-md-3">Got it!</th>
            </tr>
          </thead>
		   <tbody> 
            {{#each item_data}}
			   {{#unless this.purchased}}
				   <tr>
						<td>
						 <form method="POST" action="/shop_items/update?_method=PUT" class="form-inline">
						 	<div class="form-group">
							<input type="text" name="item" " value={{this.item}} readonly />
							<button type= "submit" class = "btn btn-xs">Got it!<i class="fa fa-check fa-1x" aria-hidden="true"></i></button>
							</div>
						</form>

						</td>
		          </tr>
			   	{{/unless}}
		   	{{/each}}
		            
            </tbody>
		</table>
		</div>
	</div>

<div class="col-xs-6 text-center" class="task">
			<div class="row">
			  {{#each item_data}}
			  	{{#unless this.purcahsed}}
				<div class="col-xs-9 text-center">
					<pre>{{this.id}}. {{this.item}}
					</pre>
				  		<!-- {{this.Date}} -->
				</div>
				<div class="col-xs-3 text-center">
					<form method="POST" action="/shop_items/update?_method=PUT" class="button-size">
						<input input type="hidden" type="text" name="item_id" value={{this.id}}><br>
						<button type="submit" class="btn btn-default">Devour it!</button>
					</form>
				</div>
				{{/unless}}
			  {{/each}}
			</div>
		</div>

		<div class="col-xs-6 text-center" class="task">
			  {{#each item_data}}
			  	{{#if this.purchased}}
			  		<input class="form-control" type="text" placeholder="{{this.id}} . {{this.item}}" readonly>
				{{/if}}
			  {{/each}}
		</div>
</div> 

  	
		