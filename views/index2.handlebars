
<div class="jumbotron">
    <h1>Shopping List</h1>
    <p>Choose items from your standard shopping list, create new list items, save items to your standard list...list, buy, </p>
    <hr>
    <p>Today's Date : <span id="date"></span></p>
</div>

<div class = "container">
<!-- //########### Entry Level ###########
problem with btn if line 32: input-group-addon then no click function, if input-group-button then it doesn't align correctly-->
<div class = "entry_level">
  <div class = "row">
  	<div class = "col-md-12">
		<div class = "col-md-6 text-center enter_section">
			<form method="POST" action="/shop_items/create">
					<div class = "input-group">
						<input type="text" name="item" class=" form-control" value = "" id = "enter_text" placeholder="Enter a grocery item input-group btn">

						<div class = "input-group-btn">
						<button type="button" class="btn btn-default button">Add Item <span class="caret"></span></button> 
						</div>						
					</div>			
			</form>
		</div>
<!-- *******standard shopping items drop down list*******
 -->		<div class = "col-md-6 text-center side_section">
			<div class="dropdown">
				<form method="POST" action="/shop_items/create">
						<input type="text" class="form-control long_btn" placeholder ="Choose Standard Item From Saved Shopping Items" aria-label="Text input with dropdown button">
				

		  				<ul class = "dropdown-menu dropdown-content">
					
						    <li><a href="#">Link 1</a></li>
						    <li><a href="#">Link 2</a></li>
						    <li><a href="#">Link 3</a></li>
					  	</ul>
				</form>
			</div>
		</div>
	</div> <!-- end of col12 -->
</div> <!-- end of row -->
</div> <!-- end of entry level -->
<!-- **********************Main Section ****************-->
<!-- //******-Items To Buy List & PurchBtn Post/Put****** -->
<div class = "row">
  <div class = "main col-md-12">
		<div class="panel panel-default col-md-6">
		  <div class="panel-heading">Items to Buy <i class="fa fa-shopping-cart" aria-hidden="true"></i>
		</div>
		  <!-- Table -->
		  {{#each item_data}}
			{{#unless this.purchased}}
				<!-- <pre> {{this.id}}. {{this.item}}</pre> -->
					<form method="POST" action="/shop_items/update?_method=PUT" class = "button-size">
	      				<table class="table table-condensed">
						    <thead>
						    	<tr>
						            <th>#</th>
						            <th>Item To Buy</th>
						            <th>Actions</th>
						        </tr>
					    	</thead>
					    	<tbody>
				        		<tr>
						            <th scope="row">1</th>
						            <td>Id input</td>
						            <td>Item name input</td>
						            <td>
						                <a class="blue-text"><i class="fa fa-user"></i></a>
						                <a class="teal-text"><i class="fa fa-pencil"></i></a>
						                <a class="red-text"><i class="fa fa-times"></i></a>
				            		</td>
				        		</tr>
				    		</tbody>
				    	</table>
			    	</form>	
		</div>

  <!-- //*******Item List & Purchased Btn Post/Put**********- -->

  <!-- //*****If Purchased & ReadOnlyPurchased List***** -->
<!-- *******trial and error********* -->

  	<div class = "col-md-6 col-md-offset-3 text-center bought2">	
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>
            Fixed Recurring Grocery Items 
          </h4>
        </div>
	        <table class="table table-fixed">
	          <thead>
	            <tr>
	              <th class="col-xs-2">#</th><th class="col-xs-4">Item</th><th class="col-xs-2">Got it!</th>
	            </tr>
	          </thead>
	          <tbody>
	            <tr>
	            {{#each item_data}}
				   {{#if this.purchased}}
				   	<td><input type ="text" class = "form-control col-xs-2" placeholder = "{{this.id}}" readonly></td>
					<td><input type ="text" class = "form-control col-xs-4" placeholder = "{{this.item}}" readonly></td>
	              	<td class="col-xs-2"><i class="fa fa-check-square fa-1x" aria-hidden="true"></i></td>
				   	{{/if}}
			   	{{/each}}
	            </tr>
          	 </tbody>
        </table>
      </div>
  </div>
</div> 
</div> 
</div> 